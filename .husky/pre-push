#!/bin/sh
. "./_/husky.sh" 2>/dev/null || true

# Run quality gates before push
echo '▶ Running pre-push checks (lint, format:check, type-check)...'
npm run lint:check && npm run format:check && npm run type-check
RESULT=0
if [  -ne 0 ]; then
  echo '❌ pre-push checks failed. Fix issues before pushing.'
  exit 
fi

echo '✅ pre-push checks passed.'
exit 0
