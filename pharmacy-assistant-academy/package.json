{
  "name": "pharmacy-assistant-academy",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check \"build-only {@}\" --",
    "build:production": "NODE_ENV=production npm run build",
    "preview": "vite preview",
    "build-only": "vite build",
    "type-check": "vue-tsc --build",
    "lint": "eslint . --fix",
    "format": "prettier --write src/",
    "migrate": "jiti src/scripts/migrate.ts",
    "test:db": "jiti src/scripts/test-db.ts",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:integration": "vitest --run src/tests",
    "api:dev": "jiti src/server/dev-server.ts",
    "api:simple": "jiti src/server/simple-dev-server.ts",
    "build:worker": "wrangler build",
    "deploy:worker": "wrangler deploy",
    "dev:worker": "wrangler dev",
    "deploy:pages": "npm run build && wrangler pages deploy dist",
    "deploy:pages:production": "npm run build:production && wrangler pages deploy dist --project-name=pharmacy-assistant-academy",
    "deploy:pages:preview": "npm run build && wrangler pages deploy dist --project-name=pharmacy-assistant-academy --branch=preview"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^7.1.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/pg": "^8.15.5",
    "bulma": "^1.0.4",
    "dotenv": "^17.2.3",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3",
    "pinia": "^3.0.3",
    "vue": "^3.5.22",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@neondatabase/serverless": "^1.0.2",
    "@tsconfig/node22": "^22.0.2",
    "@types/axios": "^0.9.36",
    "@types/node": "^22.18.6",
    "@types/supertest": "^6.0.3",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitest/ui": "^3.2.4",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/tsconfig": "^0.8.1",
    "axios": "^1.12.2",
    "eslint": "^9.33.0",
    "eslint-plugin-vue": "~10.4.0",
    "jiti": "^2.5.1",
    "npm-run-all2": "^8.0.4",
    "prettier": "3.6.2",
    "sass-embedded": "^1.93.2",
    "supertest": "^7.1.4",
    "terser": "^5.44.0",
    "typescript": "~5.9.0",
    "vite": "^7.1.7",
    "vite-plugin-vue-devtools": "^8.0.2",
    "vitest": "^3.2.4",
    "vue-tsc": "^3.1.0",
    "web-vitals": "^4.2.4",
    "wrangler": "^4.43.0"
  }
}
